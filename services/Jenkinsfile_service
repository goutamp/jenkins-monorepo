pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                scmSkip(deleteBuild: false, skipPattern:'.*\\[ci-lib-skip\\].*')
            }
        }
        stage('Build & Test') {
            matrix {
                axes {
                    axis {
                        name 'service'
                        values 'foo-service', 'bar-service', 'baz-service'
                    }
                }
                when { changeset pattern: "services/$service/*" }
                stages {
                    stage('build') {
                        when {
                                expression {
                                   return env.BRANCH_NAME == 'main';
                                }
                             }
                        steps {
                            dir("services/$service") {
                                sh "make build"
                            }
                        }
                    }
                    stage('test') {
                        steps {
                            dir("services/$service") {
                                sh "make service-test"
                            }
                        }
                    }
                    stage('deploy') {
                        steps {
                            dir("services/$service") {
                                sh "make deploy-qa"
                            }
                        }
                    }
                }
            }
        }
        stage('End to end') {
            steps {
                sh "make e2e-qa"
            }
        }
    }
}
